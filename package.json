{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "format": "yarn run prettier --write .",
    "format:all": "yarn run prettier --ignore-path .gitignore --write .",
    "sort-pkgjson": "sort-package-json \"package.json\" \"packages/*/package.json\""
  },
  "devDependencies": {
    "prettier": "2.7.1",
    "sort-package-json": "^1.57.0"
  }
}
